{
    "name": "Password Manager",
    "version": "1.0.0",
    "manifest_version": 3,
    "author": "Leon, Johannes",
    "permissions": ["activeTab", "storage", "tabs"],
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "run_at": "document_end",
            "js": ["content script/content_script.js"],
            "css": ["content script/content_style.css"]
        }
    ],
    "background": {
      "service_worker": "extPage/service_worker.js",
      "type": "module"
    },
    "action":{
        "default_popup": "extPage/index.html",
        "default_title": "Password Manager"
    },
    "content_security_policy":{
        "extension_pages": "default-src 'self'"
    }
}
